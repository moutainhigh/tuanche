    <update id="payOrder" parameterType="java.util.Map">
        <!-- 更新订单金额 -->
        UPDATE t_order
        set
        order_status = #{orderStatus,jdbcType=TINYINT}
        WHERE order_sn = #{orderSn,jdbcType=VARCHAR}
        AND order_status =  #{oldStatus,jdbcType=TINYINT}
    </update>


